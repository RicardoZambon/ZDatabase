<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Title>ZDatabase is a library that brings additional functionalities for Entity Framework.</Title>
		<Authors>Ricardo Zambon</Authors>
		<Company>ZambonSoft</Company>
		<Version>1.0.0</Version>
		<RepositoryUrl>https://github.com/RicardoZambon/ZDatabase.EntityFrameworkCore</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Cryptography.KeyDerivation" Version="6.0.13" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.13" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Proxies" Version="6.0.13" />
		<PackageReference Include="MySql.EntityFrameworkCore" Version="6.0.7" />
		<PackageReference Include="Sentry.AspNetCore" Version="3.35.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ZDatabase.EntityFrameworkCore.Audit\ZDatabase.EntityFrameworkCore.Audit.csproj" />
		<ProjectReference Include="..\ZDatabase.EntityFrameworkCore.Common\ZDatabase.EntityFrameworkCore.Common.csproj" />
	</ItemGroup>

</Project>
